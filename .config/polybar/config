# colors are aarrggbb
[colors]
foreground = #565656
foreground-alt = #aaaaaa
background = #ffffff
background-alt = #dde9f3
bspwm-underline = #1ea5f7
border = ${colors.foreground}
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
volume = #28b5d8
xbacklight = #0093b8
battery = #3ea65a
temperature = #3bbcaa
temperature2 = #9c48f5

[fonts]
font-0 = Inconsolata Semi Expanded SemiBold:pixelsize=13;3
font-1 = FiraCode Nerd Font Mono:style=Bold:pixelsize=11;3
font-2 = FiraCode Nerd Font Mono:style=Regular:pixelsize=20;4
font-3 = Roboto:pixelsize=13;4
font-4 = DejaVu Sans:pixelsize=13;4

[bar/main]
width = 100%
wm-restack = bspwm
override-redirect = false

height = 35
radius = 0.0
fixed-center = true
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}

# separator = |
font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}
font-4 = ${fonts.font-4}

underline-size = 3
# line-color = ${colors.background}

border-color = ${colors.border}
border-top-size = 1

module-margin = 1

modules-left = bspwm
modules-center = date 
modules-right = pulseaudio battery backlight cputemperature gputemperature powermenu

tray-position = right
tray-padding = 0
tray-background = ${colors.background}

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

; Only show workspaces defined on the same output as the bar
; NOTE: The bspwm and XRandR monitor names must match, which they do by default.
; But if you rename your bspwm monitors with bspc -n this option will no longer
; behave correctly.
; Default: true
pin-workspaces = true

; Output mode flags after focused state label
; Default: false
inline-mode = false

; Create click handler used to focus workspace
; Default: true
enable-click = false

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Set the scroll cycle direction 
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;‚ôö will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
fuzzy-match = false

; ws-icon-[0-9]+ = <label>;<icon>
; Note that the <label> needs to correspond with the bspwm workspace name
; Neither <label> nor <icon> can contain a semicolon (;)

; Available tags:
;   <label-monitor>
;   <label-state> - gets replaced with <label-(focused|urgent|occupied|empty)>
;   <label-mode> - gets replaced with <label-(monocle|tiled|fullscreen|floating|locked|sticky|private)>
; Default: <label-state>
format = <label-state> <label-mode>

; Available tokens:
;   %name%
; Default: %name%
label-monitor = %name%

ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;0

label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %{T2}%icon%%{T-}
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.bspwm-underline}
label-focused-padding = 1
label-focused-font = 8

; unfocused = Inactive workspace on any monitor
label-occupied = %{T2}%icon%%{T-}
label-occupied-padding = 1
label-occupied-font = 8

; empty = Active workspace on unfocused monitor
label-empty = %{T2}%icon%%{T-}
label-empty-padding = 1
label-empty-foreground = ${colors.foreground-alt}
label-empty-font = 8

; urgent = Workspace with urgency hint set
label-urgent = %{T2}%icon%%{T-}
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-urgent-font = 8

[module/date]
type = internal/date
interval = 1

date = %a %b %d, %Y
date-alt = ${self.date}

time = "%I:%M %p"
time-alt = %I:%M:%S
format-prefix-foreground = ${colors.foreground-alt}
label = %{T0}%date% | %time%%{T-}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = "%{T3}<ramp-volume>%{T-} <label-volume>"
label-volume-foreground = ${colors.volume}
ramp-volume-foreground = ${colors.volume}

ramp-volume-0 = ÔÄ¶
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄ®
label-volume = %percentage%%
label-muted = "%{T3}Ô™Ä%{T-}"
label-muted-foreground = ${colors.foreground-alt}


[module/backlight]
type = internal/backlight
format-foreground = ${colors.xbacklight}

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = amdgpu_bl0

; (unreleased)
; Use the `/sys/class/backlight/actual-brightness` file
; rather than the regular `brightness` file.
; Defaults to true unless the specified card is an amdgpu backlight.
use-actual-brightness = true

; Enable changing the backlight with the scroll wheel
; NOTE: This may require additional configuration on some systems. Polybar will
; write to `/sys/class/backlight/${self.card}/brightness` which requires polybar
; to have write access to that file.
; DO NOT RUN POLYBAR AS ROOT. 
; The recommended way is to add the user to the
; `video` group and give that group write-privileges for the `brightness` file.
; See the ArchWiki for more information:
; https://wiki.archlinux.org/index.php/Backlight#ACPI
; Default: false
enable-scroll = false
format = "%{T3}<ramp>%{T-} <label>"

; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Only applies if <ramp> is used
ramp-0 = üåï
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = üåë


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

format-charging = "%{A1:notify-send -t 1500 BATTERY "$(acpi -b | cut -d ',' -f 3)":}<label-charging>%{A}"
label-charging = ÔñÉ %percentage%%
label-charging-foreground = ${colors.battery}

format-discharging = "%{A1:notify-send -t 1500 BATTERY "$(acpi -b | cut -d ',' -f 3)":}<ramp-capacity> <label-discharging>%{A}"
label-discharging-foreground = ${colors.battery}

format-full = "%{A1:notify-send -t 1500 BATTERY "$(acpi -b)":}Ôï∏ 100%%{A}"
format-full-foreground = ${colors.battery}
label-low = Ôïπ %percentage%%
format-low = "%{A1:notify-send -t 1500 BATTERY "$(acpi -b)":}<label-low>%{A}"

ramp-capacity-0 = Ôïπ
ramp-capacity-1 = Ôï∫
ramp-capacity-2 = Ôïª
ramp-capacity-3 = Ôïº
ramp-capacity-4 = ÔïΩ
ramp-capacity-5 = Ôïæ
ramp-capacity-6 = Ôïø
ramp-capacity-7 = ÔñÄ
ramp-capacity-8 = ÔñÅ
ramp-capacity-9 = Ôï∏
ramp-capacity-foreground = ${colors.battery}

[module/cputemperature]
type = custom/script
format = %{T3}ÔîÄ%{T-} <label>
label = %output%
exec = $HOME/.config/polybar/thermalcpu.sh
format-foreground = ${colors.temperature}
interval = 3

[module/gputemperature]
type = custom/script
format = %{T3}Ô¨ô%{T-} <label>
label = %output%
exec = $HOME/.config/polybar/thermalgpu.sh
format-foreground = ${colors.temperature2}
interval = 3

[module/powermenu]
type = custom/text
content = "%{T3}Ô§§%{T-}"
click-left = ~/.config/rofi/powermenu.sh

