# colors are aarrggbb
[colors]
black = #565656
blue = #1ea5f7
grey = #aaaaaa
white = #ffffff
lightblue = #dde9f3
red = #bd2c40
yellow = #ffb52a

[fonts]
font-0 = Inconsolata Semi Expanded SemiBold:pixelsize=13;3
font-1 = FiraCode Nerd Font Mono:style=Bold:pixelsize=11;3
font-2 = FiraCode Nerd Font Mono:style=Regular:pixelsize=20;4
font-3 = Roboto:pixelsize=13;4
font-4 = DejaVu Sans:pixelsize=13;4

[bar/main]
width = 100%
wm-restack = bspwm
override-redirect = false
height = 35
radius = 0.0
fixed-center = true
bottom = true
background = ${colors.white}
foreground = ${colors.black}
border-color = ${colors.black}
border-top-size = 1

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}
font-4 = ${fonts.font-4}

underline-size = 3
module-margin = 0

modules-left = powermenu battery backlight cputemperature gputemperature
modules-center = bspwm 
modules-right = pulseaudio date

tray-position = right
tray-padding = 0
tray-background = ${bar/main.background}

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

; Only show workspaces defined on the same output as the bar
; NOTE: The bspwm and XRandR monitor names must match, which they do by default.
; But if you rename your bspwm monitors with bspc -n this option will no longer
; behave correctly.
; Default: true
pin-workspaces = true

; Output mode flags after focused state label
; Default: false
inline-mode = false

; Create click handler used to focus workspace
; Default: true
enable-click = false

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Set the scroll cycle direction 
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;‚ôö will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
fuzzy-match = false

; ws-icon-[0-9]+ = <label>;<icon>
; Note that the <label> needs to correspond with the bspwm workspace name
; Neither <label> nor <icon> can contain a semicolon (;)

; Available tags:
;   <label-monitor>
;   <label-state> - gets replaced with <label-(focused|urgent|occupied|empty)>
;   <label-mode> - gets replaced with <label-(monocle|tiled|fullscreen|floating|locked|sticky|private)>
; Default: <label-state>
format = <label-state> <label-mode>

; Available tokens:
;   %name%
; Default: %name%
label-monitor = %name%

ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;0

label-mode-padding = 2
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.yellow}

; focused = Active workspace on focused monitor
label-focused = %{T2}%icon%%{T-}
label-focused-foreground = ${colors.black}
label-focused-background = ${colors.lightblue}
label-focused-underline = ${colors.blue}
label-focused-padding = 2
label-focused-font = 8

; unfocused = Inactive workspace on any monitor
label-occupied = %{T2}%icon%%{T-}
label-occupied-padding = 2
label-occupied-font = 8

; empty = Active workspace on unfocused monitor
# label-empty = %{T2}%icon%%{T-}
label-empty =
label-empty-padding = 2
label-empty-foreground = ${colors.grey}
label-empty-font = 8

; urgent = Workspace with urgency hint set
label-urgent = %{T2}%icon%%{T-}
label-urgent-foreground = ${colors.white}
label-urgent-background = ${colors.red}
label-urgent-padding = 2
label-urgent-font = 8

[module/date]
type = internal/date
interval = 1

date =
date-alt = "%a %b %d, "

time = %I:%M %p
time-alt = %I:%M:%S
label = %{T0}%date%%time%%{T-}
label-padding = 1

[module/pulseaudio]
type = internal/pulseaudio

format-volume = %{T3}<ramp-volume>%{T-} <label-volume>
format-volume-padding = 1
label-volume-foreground = ${colors.black}
ramp-volume-foreground = ${colors.black}

ramp-volume-0 = ÔÄ¶
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄ®
label-volume = %percentage%%
label-muted = %{T3}Ô™Ä%{T-} muted
label-muted-foreground = ${colors.grey}
label-muted-padding = 1


[module/backlight]
type = internal/backlight
format-foreground = ${colors.black}

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = amdgpu_bl0

; (unreleased)
; Use the `/sys/class/backlight/actual-brightness` file
; rather than the regular `brightness` file.
; Defaults to true unless the specified card is an amdgpu backlight.
use-actual-brightness = true

; Enable changing the backlight with the scroll wheel
; NOTE: This may require additional configuration on some systems. Polybar will
; write to `/sys/class/backlight/${self.card}/brightness` which requires polybar
; to have write access to that file.
; DO NOT RUN POLYBAR AS ROOT. 
; The recommended way is to add the user to the
; `video` group and give that group write-privileges for the `brightness` file.
; See the ArchWiki for more information:
; https://wiki.archlinux.org/index.php/Backlight#ACPI
; Default: false
enable-scroll = false
format = %{T3}<ramp>%{T-} <label>

; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Only applies if <ramp> is used
ramp-0 = üåï
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = üåë


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

format-charging = %{A1:./batteryinfo.sh --time:}<label-charging>%{A}
label-charging = ÔñÉ %percentage%%
label-charging-foreground = ${colors.black}

format-discharging = %{A1:./batteryinfo.sh --time:}<ramp-capacity> <label-discharging>%{A}
label-discharging-foreground = ${colors.black}

format-full = %{A1:./batteryinfo.sh:}Ôï∏ 100%%{A}
format-full-foreground = ${colors.black}
label-low = Ôïπ %percentage%%
format-low = %{A1:./batteryinfo.sh:}<label-low>%{A}

ramp-capacity-0 = Ôïπ
ramp-capacity-1 = Ôï∫
ramp-capacity-2 = Ôïª
ramp-capacity-3 = Ôïº
ramp-capacity-4 = ÔïΩ
ramp-capacity-5 = Ôïæ
ramp-capacity-6 = Ôïø
ramp-capacity-7 = ÔñÄ
ramp-capacity-8 = ÔñÅ
ramp-capacity-9 = Ôï∏
ramp-capacity-foreground = ${colors.black}

[module/cputemperature]
type = custom/script
format = %{T3}ÔîÄ%{T-} <label>
label = %output%
format-padding = 1
exec = $HOME/.config/polybar/thermalcpu.sh
format-foreground = ${colors.black}
interval = 3

[module/gputemperature]
type = custom/script
format = %{T3}Ô¨ô%{T-} <label>
label = %output%
format-padding = 1
exec = $HOME/.config/polybar/thermalgpu.sh
format-foreground = ${colors.black}
interval = 3

[module/powermenu]
type = custom/text
content = %{T3}Ô§§%{T-}
content-foreground = ${colors.white}
content-background = ${colors.blue}
content-padding = 2
click-left = ~/.config/rofi/powermenu.sh

