#
# wm independent hotkeys
#

# terminal emulator
super + Return
    $TERMAPP

# nnn launcher
super + n
    $TERMAPP  --class "filemanager" -e nnnfm.sh

# Play Music
ctrl + shift + m
    $TERMAPP -e $HOME/Music/yt-playlist

# program launcher
super + x
    $HOME/.config/rofi/launcher.sh

# launch KanaConvert
ctrl + shift + k
    /opt/KanaConvert/KanaConvert

# launch browser
super + @space
    firefox

# open powermenu
super + Delete
    $HOME/.config/rofi/powermenu.sh

# searches for local pdfs
super + z
    searchpdf.sh --one-file-system

# searches for global pdfs
super + shift + z
    searchpdf.sh

# window list
super + d
    rofi -show window

# clipboard manager
super + v
    clipmenu

# delete clipboard items
super + ctrl + v
    clipdelrofi.sh

# delete all clipboard items
super + ctrl + alt + v
    clipdelrofi.sh '.*' && notify-send -t 1500 'cleared all clipboard'

# sxhkd reload configuration files
super + Escape
    pkill -USR1 -x sxhkd && notify-send -t 1500 'sxhkd reloaded'

# display help menu
super + slash
    sxhkd-help.sh

# dunstctl hotkeys
# dunstctl {close, close-all}
ctrl + {_, shift} + space
    dunstctl {close, close-all}

# dunstctl {history-pop, context}
ctrl + {period, grave}
    dunstctl {history-pop, context}


#
# bspwm hotkeys
#

# Rotate node configuration
super + {y, shift + y}
    bspc node -f @parent && bspc node -R {90,-90} && bspc node -f last.local

# quit/restart bspwm
super + alt + {q,r}
    bspc {quit,wm -r}

# close and kill
super + {e,shift + e}
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + a
    bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window locally
super + g
    bspc node -s biggest.local

# Audio Controls
# Mute Audio
{XF86AudioMute, super + m}
    pactl set-sink-mute @DEFAULT_SINK@ toggle && \
    volumenotify.sh

# increase volume
{XF86AudioLowerVolume, Scroll_Lock}
    pactl set-sink-mute @DEFAULT_SINK@ false && \
    pactl set-sink-volume @DEFAULT_SINK@ -3% && \
    volumenotify.sh

# decrease volume
{XF86AudioRaiseVolume, Pause}
    pactl set-sink-mute @DEFAULT_SINK@ false && \
    pactl set-sink-volume @DEFAULT_SINK@ +3% && \
    volumenotify.sh

# laptop brightness increase or decrease
{XF86MonBrightnessUp, XF86MonBrightnessDown}
    xbacklight {-inc, -dec} 5 && brightnessnotify.sh

# fullscreen same screenshot
@Print
    mkdir -p ~/Pictures/Screenshots && maim --hidecursor ~/Pictures/Screenshots/$(date +%s).png

# screenshot copies to clipboard
super + @Print
    maim -s --hidecursor | xclip -selection clipboard -t image/png

# saves frame screenshot
super + shift + @Print
    mkdir -p ~/Pictures/Screenshots && maim -s --hidecursor ~/Pictures/Screenshots/$(date +%s).png


#
# state/flags
#
# set the window state {tiled, pseudo_tiled, floating, fullscreen}
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}


# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
alt + {_,shift + }Tab
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus the given desktop
ctrl + {1-9,0}
    bspc desktop -f '^{1-9,10}'

# alternative focus the given desktop
super + {1-9,0}
    bspc desktop -f '^{1-9,10}'

# send to given desktop
ctrl + alt + {1-9,0}
    bspc node -d '^{1-9,10}' --follow

# alternative send to given desktop
super + alt + {1-9,0}
    bspc node -d '^{1-9,10}' --follow

# hide windows
super + w
    bspc node -g hidden

# unhide windows
super + shift + w
    bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}
